{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": true,
  "version": 2,
  "blocks": [
    {
      "alignment": "left",
      "type": "prompt",
      "segments": [
        {
          "type": "python",
          "style": "plain",
          "foreground": "#40C4FF",
          "template": "{{ if .Error }}{{ .Error }}{{ else }}({{ .Venv }}@{{ .Full }}){{ end }} "
        },
        {
          "type": "session",
          "style": "plain",
          "foreground": "#40C4FF",
          "template": "{{ if .Segments.Python }}{{ else }}@{{ .UserName }}{{ end }} "
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#B2FF59",
          "template": "<b>\u279c</b>"
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#40C4FF",
          "properties": {
            "style": "folder"
          },
          "template": " {{ .Path }}"
        },
        {
          "foreground": "red",
          "style": "plain",
          "template": " \uea87",
          "type": "status"
        }
      ]
    }
  ]
}
