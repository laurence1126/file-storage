\usepackage{minted}
\usemintedstyle{emacs}
\usepackage[most]{tcolorbox}
\definecolor{codeBG}{HTML}{f7f7f7}
\tcbset{enhanced, boxsep=0em, boxrule=1pt, colframe=gray!50, left=3mm, right=3mm, top=0.5em, bottom=0.5em, colback=codeBG, breakable, pad at break=0.5em}

\NewTotalTCBox{\code}{ O{python} m }{enhanced, nobeforeafter, tcbox raise base, valign=center, left=1mm, right=1mm, top=0.2em, bottom=0.2em, height=1.4em, colback=codeBG, colframe=gray!50, boxrule=1pt}
	{\mintinline{#1}{#2}}
\NewDocumentCommand \readPython { > {\SplitArgument{1}{-}} o m O{}}{
    \IfNoValueTF{#1}{
        \begin{tcolorbox}
        \inputminted[highlightlines={#3}, mathescape, breaklines, breakindentnchars=0, breaksymbolsepnchars=1, fontfamily=tt, python3]{python}{#2}
        \end{tcolorbox}
    }{
        \providecommand{\lineInputParser}[2]{
            \def\first{##1}
            \def\last{##2}
        }
        \lineInputParser #1
        \begin{tcolorbox}
        \inputminted[firstline=\first, lastline=\last, highlightlines={#3}, mathescape, breaklines, breakindentnchars=0, breaksymbolsepnchars=1, fontfamily=tt, python3]{python}{#2}
        \end{tcolorbox}
    } 
}
